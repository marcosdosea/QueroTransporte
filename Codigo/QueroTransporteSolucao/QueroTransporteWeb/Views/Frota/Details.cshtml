@model QueroTransporte.Model.FrotaModel

@{
    ViewData["Title"] = "Details";
}

<h2>Detalhes</h2>

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" readonly />
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsPublic" readonly /> @Html.DisplayNameFor(model => model.IsPublic)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <a href="@Url.Action("Edit", "Frota", new { id = Model.Id })" class="btn btn-info"><i class="fa fa-pencil"></i> Editar </a>
                <a class="btn btn-default" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>