@model QueroTransporte.Model.ConsumivelVeicularModel

@{
    ViewData["Title"] = "Consumiveis";
}

<h2>Cadastro</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Placa Veiculo</label>
                @*ViewBag.RotaList is holding all the routs values*@
                @Html.DropDownListFor(model => model.IdVeiculo, ViewBag.Veiculos as SelectList, new
                { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdVeiculo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDespesa" class="control-label"></label>
                <input asp-for="DataDespesa" class="form-control" />
                <span asp-validation-for="DataDespesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <input asp-for="Categoria" class="form-control" />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />  <a class="btn btn-danger" asp-action="Index">Cancelar</a>

            </div>
        </form>
    </div>
</div>
